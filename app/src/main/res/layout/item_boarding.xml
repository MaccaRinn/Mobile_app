<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_boarding"
    android:padding="8dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgHotel"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtHotelName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="#222"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imgHotel"
        app:layout_constraintEnd_toStartOf="@id/btnBookNow"
        app:layout_constraintTop_toTopOf="@id/imgHotel" />

    <TextView
        android:id="@+id/txtHotelDesc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="#666"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@id/imgHotel"
        app:layout_constraintEnd_toStartOf="@id/btnBookNow"
        app:layout_constraintTop_toBottomOf="@id/txtHotelName" />

    <TextView
        android:id="@+id/txtHotelPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textColor="#00796B"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/imgHotel"
        app:layout_constraintEnd_toStartOf="@id/btnBookNow"
        app:layout_constraintTop_toBottomOf="@id/txtHotelDesc" />

    <Button
        android:id="@+id/btnBookNow"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Book"
        android:textStyle="bold"
        android:textColor="#fff"
        android:backgroundTint="#F9B233"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
