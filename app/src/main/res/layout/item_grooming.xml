<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_boarding"
    android:padding="8dp"
    android:layout_marginBottom="12dp">

    <ImageView
        android:id="@+id/imgService"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/txtServiceName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:text=""
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#222"
        app:layout_constraintStart_toEndOf="@id/imgService"
        app:layout_constraintEnd_toStartOf="@id/btnOrder"
        app:layout_constraintTop_toTopOf="@id/imgService" />

    <TextView
        android:id="@+id/txtServicePrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="4dp"
        android:text=""
        android:textSize="13sp"
        android:textColor="#F9B233"
        app:layout_constraintStart_toEndOf="@id/imgService"
        app:layout_constraintEnd_toStartOf="@id/btnOrder"
        app:layout_constraintTop_toBottomOf="@id/txtServiceName" />

    <Button
        android:id="@+id/btnOrder"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Order"
        android:textStyle="bold"
        android:textColor="#fff"
        android:backgroundTint="#F9B233"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>