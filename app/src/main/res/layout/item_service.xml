<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/bg_item_boarding"
    android:layout_marginBottom="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgService"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bgpet"
        android:scaleType="centerCrop"
        android:src="@drawable/bong" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txtServiceName"
            android:layout_width="200dp"
            android:layout_height="23dp"
            android:text="Grooming"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#222"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/txtServiceDate"
            android:layout_width="120dp"
            android:layout_height="16dp"
            android:text="Date: 12/07/2025"
            android:textSize="13sp"
            android:textColor="#444"/>

        <TextView
            android:id="@+id/txtServiceNote"
            android:layout_width="270dp"
            android:layout_height="17dp"
            android:text="Note: Cắt ngắn lông"
            android:textSize="13sp"
            android:textColor="#444"/>

        <TextView
            android:id="@+id/txtPetName"
            android:layout_width="270dp"
            android:layout_height="16dp"
            android:text="Pet: Bông"
            android:textSize="13sp"
            android:textColor="#444"/>

        <TextView
            android:id="@+id/txtServicePrice"
            android:layout_width="270dp"
            android:layout_height="16dp"
            android:text="Price: 150,000 VNĐ"
            android:textSize="13sp"
            android:textColor="#444"/>
    </LinearLayout>
</LinearLayout>